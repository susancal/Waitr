<% if @error %>
  <%= @error %>
<% end %>

<h1 class="login-header"> Welcome to Waitr </h1>
<h3 class="login-slogan">Where Waiting In Line Sucks Less</h3>
<div class="row">
<%= form_for :restaurant, url:'/login' , method: :post, class: "col s12" do |f|%>
  <div class="input-field col s12">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Name', class: "validate" %>
  </div>

 <div class="input-field col s12">
    <%= f.label :password %>
    <%= f.password_field :password,  placeholder: 'password', class: "validate" %>
 </div>

  <div class="input-field col s12">
    <%= f.submit "Log In", class: "btn waves-effect waves-light"  %>
  </div>

<% end %>
</div>



