<h5><%= @rest.name %></h5>
<h4>Leaderboard</h4>

<table class="waiting_list bordered centered">
  <thead>
    <tr>
      <th data-field="name" class="leader-board-header"> Party </th>
      <th data-field="name" class="leader-board-header">Points </th>
    </tr>
  </thead>
  <tbody>
    <% @current.each do |player| %>
    <% if session[:party_id] == player.id %>
      <tr id="itsyou">
    <% else %>
      <tr>
    <% end %>
      <td><%= player.name %></td>
      <td><%= player.points_earned %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<a class="waves-effect waves-light btn large" href=/restaurants/<%= @rest.id %>/parties/<%= @current_party.key %>>Back to Main</a>
